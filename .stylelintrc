{
  "$schema": "http://json.schemastore.org/stylelintrc",
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": 2,
    "selector-combinator-space-after": ["always", {
      "severity": "warning"
    }],
    "selector-combinator-space-before": ["always", {
      "severity": "warning"
    }],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["include", "mixin"]
      }
    ]
  }
}
